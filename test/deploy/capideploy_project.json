                "cmd": {
                    "setup": [
                        "sh/common/replace_nameserver.sh",
                        "sh/prometheus/setup_node_exporter.sh",
                        "sh/rsyslog/setup_capidaemon_log_receiver.sh",
                        "sh/logrotate/setup_capidaemon_logrotate.sh",
                        "sh/toolbelt/setup_toolbelt.sh",
                        "sh/webapi/setup_webapi.sh",
                        "sh/ui/setup_ui.sh",
                        "sh/nginx/setup_nginx.sh",
                        "sh/nginx/add_ui.sh",
                        "sh/nginx/add_prometheus_reverse_proxy.sh",
                        "sh/nginx/add_rabbitmq_reverse_proxy.sh"
                    ],
                    "start": [
                        "sh/webapi/start_webapi.sh",
                        "sh/nginx/start_nginx.sh"
                    ],
                    "stop": [
                        "sh/webapi/stop_webapi.sh",
                        "sh/nginx/stop_nginx.sh"
                    ]
                }
            },
            "applicable_file_groups": [
                "up_all_cfg",
                "up_lookup_bigtest_in",
                "up_lookup_bigtest_out",
                "up_lookup_quicktest_in",
                "up_lookup_quicktest_out",
                "up_tag_and_denormalize_quicktest_in",
                "up_tag_and_denormalize_quicktest_out",
                "up_webapi_binary",
                "up_webapi_env_config",
                "up_toolbelt_binary",
                "up_toolbelt_env_config",
                "up_ui",
                "down_capi_out",
                "down_capi_logs"
            ]
        },

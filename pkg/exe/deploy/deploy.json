                    "PROMETHEUS_NODE_EXPORTER_VERSION": "{prometheus_node_exporter_version}"
                },
                "cmd": {
                    "setup": [
                        "sh/common/replace_nameserver.sh",
                        "sh/prometheus/setup_node_exporter.sh",
                        "sh/cassandra/setup_node.sh"
                    ],
                    "start": [
                        "sh/cassandra/start_node.sh"
                    ],
                    "stop": [
                        "sh/cassandra/stop_node.sh"
                    ]
                }
            }
        },
        "cass03": {
            "host_name": "{deployment_name}-cassandra03",
            "security_group":"internal",
            "ip_address": "10.5.0.13",
            "flavor": "gp1.lightspeed",
            "image": "Ubuntu-22.04",
            "id": "",
            "service": {
                "env": {
                    "CASSANDRA_IP": "10.5.0.13",
                    "CASSANDRA_RACK": "rack3",
                    "CASSANDRA_SEEDS": "{cassandra_seeds}",
                    "PROMETHEUS_NODE_EXPORTER_VERSION": "{prometheus_node_exporter_version}"
                },
                "cmd": {
                    "setup": [
                        "sh/common/replace_nameserver.sh",
                        "sh/prometheus/setup_node_exporter.sh",
                        "sh/cassandra/setup_node.sh"
                    ],
                    "start": [
                        "sh/cassandra/start_node.sh"
                    ],
                    "stop": [
                        "sh/cassandra/stop_node.sh"
                    ]
                }
            }
        },
        "daemon01": {
            "host_name": "{deployment_name}-daemon01",
            "security_group":"internal",
            "ip_address": "10.5.0.101",
            "flavor": "gp1.semisonic",
            "image": "Ubuntu-22.04",
            "id": "",
            "service": {
                "env": {
                    "AMQP_URL": "amqp://{rabbitmq_user_name}:{rabbitmq_user_pass}@{rabbitmq_ip}/",
                    "BASTION_IP": "{bastion_ip}",
                    "CASSANDRA_HOSTS": "'[\"10.5.0.11\",\"10.5.0.12\",\"10.5.0.13\"]'",
                    "PROMETHEUS_NODE_EXPORTER_VERSION": "{prometheus_node_exporter_version}"
                },
                "cmd": {
                    "setup": [
                        "sh/common/replace_nameserver.sh",
                        "sh/prometheus/setup_node_exporter.sh",
                        "sh/logrotate/setup_capidaemon_logrotate.sh",
                        "sh/rsyslog/setup_capidaemon_log_sender.sh",
                        "sh/daemon/setup_daemon.sh"
                    ],
                    "start": [
                        "sh/daemon/start_daemon.sh"
                    ],
                    "stop": [
                        "sh/daemon/stop_daemon.sh"
                    ]
                }
            },
            "applicable_file_groups": [
                "up_daemon_binary",
                "up_daemon_env_config"
            ]
        },
        "prometheus": {
            "host_name": "{deployment_name}-prometheus",
            "security_group":"internal",
            "ip_address": "{prometheus_ip}",
            "flavor": "gp1.semisonic",
            "image": "Ubuntu-22.04",
            "id": "",
            "service": {
                "env": {
                    "PROMETHEUS_NODE_EXPORTER_VERSION": "{prometheus_node_exporter_version}",
                    "PROMETHEUS_TARGETS": "\\'localhost:9100\\',\\'10.5.0.2:9100\\',\\'10.5.0.5:9100\\',\\'10.5.0.11:9100\\',\\'10.5.0.12:9100\\',\\'10.5.0.13:9100\\',\\'10.5.0.101:9100\\'",
                    "PROMETHEUS_VERSION": "{prometheus_version}"
                },
                "cmd": {
                    "setup": [
                        "sh/common/replace_nameserver.sh",
                        "sh/prometheus/setup_server.sh",
                        "sh/prometheus/setup_node_exporter.sh"
                    ],
                    "start": [
                        "sh/prometheus/start_server.sh"
                    ],
                    "stop": [
                        "sh/prometheus/stop_server.sh"
                    ]
                }
            }
        },
        "rabbitmq": {
            "host_name": "{deployment_name}-rabbitmq",
            "security_group":"internal",
            "ip_address": "{rabbitmq_ip}",
            "flavor": "gp1.semisonic",
            "image": "Ubuntu-22.04",
            "id": "",
            "service": {
                "env": {
                    "PROMETHEUS_NODE_EXPORTER_VERSION": "{prometheus_node_exporter_version}",
                    "RABBITMQ_ADMIN_NAME": "{rabbitmq_admin_name}",
                    "RABBITMQ_ADMIN_PASS": "{rabbitmq_admin_pass}",
                    "RABBITMQ_USER_NAME": "{rabbitmq_user_name}",
                    "RABBITMQ_USER_PASS": "{rabbitmq_user_pass}"
                },
                "cmd": {
                    "setup": [
                        "sh/common/replace_nameserver.sh",
                        "sh/prometheus/setup_node_exporter.sh",
                        "sh/rabbitmq/setup_rabbitmq.sh"
                    ],
                    "start": [
                        "sh/cassandra/start_rabbitmq.sh"
                    ],
                    "stop": [
                        "sh/cassandra/stop_rabbitmq.sh"
                    ]
                }
            }
        }
    }
}
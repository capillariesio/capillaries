{
    "deployment_name": "{deployment_name}",
    "ssh_config": {
        "bastion_ip_address": "{floating_ip_address}",
        "port": 22,
        "user": "ubuntu",
        "private_key_path": "{private_key_path}",
        "private_key_password": "{private_key_password}"
    },
    "root_key_name": "{deployment_name}_root_key",
    "availability_zone": "iad-2",
    "timeouts": {
        "openstack_cmd": 60,
        "openstack_instance_creation": 240,
        "attach_volume": 60
    },
    "openstack_environment_variables": {
        "OS_AUTH_URL": "{OS_AUTH_URL}",
        "OS_IDENTITY_API_VERSION": "3",
        "OS_INTERFACE": "public",
        "OS_PASSWORD": "{OS_PASSWORD}",
        "OS_PROJECT_ID": "{OS_PROJECT_ID}",
        "OS_PROJECT_NAME": "{OS_PROJECT_NAME}",
        "OS_REGION_NAME": "RegionOne",
        "OS_USERNAME": "{OS_USERNAME}",
        "OS_USER_DOMAIN_NAME": "Default"
    },
    "security_groups": {
        "internal": {
            "name": "{deployment_name}_internal_security_group",
            "id": "",
            "rules": [
                {
                    "desc": "SSH",
                    "id": "",
                    "protocol": "tcp",
                    "ethertype": "IPv4",
                    "remote_ip": "{subnet_cidr}",
                    "port": 22,
                    "direction": "ingress"
                },
                {
                    "desc": "Prometheus UI internal",
                    "id": "",
                    "protocol": "tcp",
                    "ethertype": "IPv4",
                    "remote_ip": "{subnet_cidr}",
                    "port": 9090,
                    "direction": "ingress"
                },
                {
                    "desc": "Prometheus node exporter",
                    "id": "",
                    "protocol": "tcp",
                    "ethertype": "IPv4",
                    "remote_ip": "{subnet_cidr}",
                    "port": 9100,
                    "direction": "ingress"
                },
                {
                    "desc": "Cassandra JMX",
                    "id": "",
                    "protocol": "tcp",
                    "ethertype": "IPv4",
                    "remote_ip": "{subnet_cidr}",
                    "port": 7199,
                    "direction": "ingress"
                },
                {
                    "desc": "Cassandra cluster comm",
                    "id": "",
                    "protocol": "tcp",
                    "ethertype": "IPv4",
                    "remote_ip": "{subnet_cidr}",
                    "port": 7000,
                    "direction": "ingress"
                },
                {
                    "desc": "Cassandra API",
                    "id": "",
                    "protocol": "tcp",
                    "ethertype": "IPv4",
                    "remote_ip": "{subnet_cidr}",
                    "port": 9042,
                    "direction": "ingress"
                },
                {
                    "desc": "RabbitMQ API",
                    "id": "",
                    "protocol": "tcp",
                    "ethertype": "IPv4",
                    "remote_ip": "{subnet_cidr}",
                    "port": 5672,
                    "direction": "ingress"
                },
                {
                    "desc": "RabbitMQ UI",
                    "id": "",
                    "protocol": "tcp",
                    "ethertype": "IPv4",
                    "remote_ip": "{subnet_cidr}",
                    "port": 15672,
                    "direction": "ingress"
                }
            ]
        },
        "bastion": {
            "name": "{deployment_name}_bastion_security_group",
            "id": "",
            "rules": [
                {
                    "desc": "SSH",
                    "id": "",
                    "protocol": "tcp",
                    "ethertype": "IPv4",
                    "remote_ip": "0.0.0.0/0",
                    "port": 22,
                    "direction": "ingress"
                },
                {
                    "desc": "Prometheus UI reverse proxy",
                    "id": "",
                    "protocol": "tcp",
                    "ethertype": "IPv4",
                    "remote_ip": "0.0.0.0/0",
                    "port": 9090,
                    "direction": "ingress"
                },
                {
                    "desc": "Prometheus node exporter",
                    "id": "",
                    "protocol": "tcp",
                    "ethertype": "IPv4",
                    "remote_ip": "{subnet_cidr}",
                    "port": 9100,
                    "direction": "ingress"
                },
                {
                    "desc": "RabbitMQ UI reverse proxy",
                    "id": "",
                    "protocol": "tcp",
                    "ethertype": "IPv4",
                    "remote_ip": "0.0.0.0/0",
                    "port": 15672,
                    "direction": "ingress"
                },
                {
                    "desc":"rsyslog receiver",
                    "id": "",
                    "protocol": "udp",
                    "ethertype": "IPv4",
                    "remote_ip": "{subnet_cidr}",
                    "port": 514,
                    "direction": "ingress"
                },
                {
                    "desc":"Capillaries webapi",
                    "id": "",
                    "protocol": "tcp",
                    "ethertype": "IPv4",
                    "remote_ip": "0.0.0.0/0",
                    "port": 6543,
                    "direction": "ingress"
                },
                {
                    "desc":"Capillaries UI nginx",
                    "id": "",
                    "protocol": "tcp",
                    "ethertype": "IPv4",
                    "remote_ip": "0.0.0.0/0",
                    "port": 80,
                    "direction": "ingress"
                }
            ]
        }
    },
    "network": {
        "name": "{deployment_name}_network",
        "id": "241cfeeb-ec0f-4cfc-91ef-36f6ef439950",
        "subnet": {
            "name": "{deployment_name}_subnet",
            "id": "ee5af192-0bfa-44fb-aa46-20e5407562d7",
            "cidr": "{subnet_cidr}"
        },
        "router": {
            "name": "{deployment_name}_router",
            "id": "4ea468b5-44d8-43dc-94db-538c916b5731",
            "external_gateway_network_name": "public"
        }
    },
    "volumes": {
        "cfg": {
            "name": "{deployment_name}_cfg",
            "mount_point": "/mnt/capi_cfg",
            "size": 1,
            "permissions": 447,
            "id": ""
        },
        "in": {
            "name": "{deployment_name}_in",
            "mount_point": "/mnt/capi_in",
            "size": 1,
            "permissions": 447,
            "id": ""
        },
        "out": {
            "name": "{deployment_name}_out",
            "mount_point": "/mnt/capi_out",
            "size": 1,
            "permissions": 667,
            "id": ""
        }
    },
    "file_groups_up": {
        "up_capi_scripts": {
            "src": "../../../test/data/cfg",
            "dst": "/mnt/capi_cfg",
            "permissions": 644
        },
        "up_daemon_binary": {
            "src": "../../../build/linux/amd64/capidaemon",
            "dst": "/home/ubuntu/bin",
            "permissions": 744
        },
        "up_daemon_env_config": {
            "src": "../../../pkg/exe/daemon/env_config.json",
            "dst": "/home/ubuntu/bin",
            "permissions": 644
        },
        "up_ui": {
            "src": "../../../ui/public",
            "dst": "/home/ubuntu/ui",
            "permissions": 744
        },
        "up_webapi_binary": {
            "src": "../../../build/linux/amd64/webapi",
            "dst": "/home/ubuntu/bin",
            "permissions": 744
        },
        "up_webapi_env_config": {
            "src": "../../../pkg/exe/webapi/env_config.json",
            "dst": "/home/ubuntu/bin",
            "permissions": 644
        }
    },
    "file_groups_down": {
        "down_capi_logs": {
            "src": "/var/log/capidaemon/",
            "dst": "./tmp/capi_logs"
        }
    },
    "instances": {
        "bastion": {
            "host_name": "{deployment_name}-bastion",
            "security_group":"bastion",
            "ip_address": "10.5.0.2",
            "floating_ip_address": "{floating_ip_address}",
            "flavor": "gp1.semisonic",
            "image": "Ubuntu-22.04",
            "attached_volumes": {
                "cfg": {
                    "attachment_id": "",
                    "device": "",
                    "block_device_id": ""
                },
                "in": {
                    "attachment_id": "",
                    "device": "",
                    "block_device_id": ""
                },
                "out": {
                    "attachment_id": "",
                    "device": "",
                    "block_device_id": ""
                }
            },
            "id": "",
            "service": {
                "env": {
                    "AMQP_URL": "amqp://{rabbitmq_user_name}:{rabbitmq_user_pass}@{rabbitmq_ip}/",
                    "CASSANDRA_HOSTS": "'[\"10.5.0.11\",\"10.5.0.12\",\"10.5.0.13\"]'",
                    "PROMETHEUS_IP": "{prometheus_ip}",
                    "PROMETHEUS_NODE_EXPORTER_VERSION": "{prometheus_node_exporter_version}",
                    "RABBITMQ_IP": "{rabbitmq_ip}",
                    "WEBAPI_ACCESS_CONTROL_ACCESS_ORIGIN": "http://{floating_ip_address}",
                    "WEBAPI_IP": "{floating_ip_address}",
                    "WEBAPI_PORT": "6543"
                },
                "cmd": {
                    "setup": [
                        "sh/common/replace_nameserver.sh",
                        "sh/prometheus/setup_node_exporter.sh",
                        "sh/rsyslog/setup_capidaemon_log_receiver.sh",
                        "sh/logrotate/setup_capidaemon_logrotate.sh",
                        "sh/webapi/setup_webapi.sh",
                        "sh/ui/setup_ui.sh",
                        "sh/nginx/setup_nginx.sh",
                        "sh/nginx/add_ui.sh",
                        "sh/nginx/add_prometheus_reverse_proxy.sh",
                        "sh/nginx/add_rabbitmq_reverse_proxy.sh"
                    ],
                    "start": [
                        "sh/webapi/start_webapi.sh",
                        "sh/nginx/start_nginx.sh"
                    ],
                    "stop": [
                        "sh/webapi/stop_webapi.sh",
                        "sh/nginx/stop_nginx.sh"
                    ]
                }
            },
            "applicable_file_groups": [
                "up_capi_scripts",
                "up_webapi_binary",
                "up_webapi_env_config",
                "up_ui",
                "down_capi_logs"
            ]
        },
        "cass01": {
            "host_name": "{deployment_name}-cassandra01",
            "security_group":"internal",
            "ip_address": "10.5.0.11",
            "flavor": "gp1.lightspeed",
            "image": "Ubuntu-22.04",
            "id": "",
            "service": {
                "env": {
                    "CASSANDRA_IP": "10.5.0.11",
                    "CASSANDRA_RACK": "rack1",
                    "CASSANDRA_SEEDS": "{cassandra_seeds}",
                    "PROMETHEUS_NODE_EXPORTER_VERSION": "{prometheus_node_exporter_version}"
                },
                "cmd": {
                    "setup": [
                        "sh/common/replace_nameserver.sh",
                        "sh/prometheus/setup_node_exporter.sh",
                        "sh/cassandra/setup_node.sh"
                    ],
                    "start": [
                        "sh/cassandra/start_node.sh"
                    ],
                    "stop": [
                        "sh/cassandra/stop_node.sh"
                    ]
                }
            }
        },
        "cass02": {
            "host_name": "{deployment_name}-cassandra02",
            "security_group":"internal",
            "ip_address": "10.5.0.12",

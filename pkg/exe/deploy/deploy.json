{
    "deployment_name": "{deployment_name}",
    "ssh_config": {
        "bastion_ip_address": "{floating_ip_address}",
        "port": 22,
        "user": "ubuntu",
        "private_key_path": "{private_key_path}",
        "private_key_password": "{private_key_password}"
    },
    "root_key_name": "{deployment_name}_root_key",
    "availability_zone": "iad-2",
    "timeouts": {
        "openstack_cmd": 60,
        "openstack_instance_creation": 120,
        "attach_volume": 60
    },
    "openstack_environment_variables": {
        "OS_AUTH_URL": "{OS_AUTH_URL}",
        "OS_IDENTITY_API_VERSION": "3",
        "OS_INTERFACE": "public",
        "OS_PASSWORD": "{OS_PASSWORD}",
        "OS_PROJECT_ID": "{OS_PROJECT_ID}",
        "OS_PROJECT_NAME": "{OS_PROJECT_NAME}",
        "OS_REGION_NAME": "RegionOne",
        "OS_USERNAME": "{OS_USERNAME}",
        "OS_USER_DOMAIN_NAME": "Default"
    },
    "security_group": {
        "name": "{deployment_name}_security_group",
        "id": "c02e9068-5057-4213-89b7-48ca9dca86f1",
        "rules": [
            {
                "id": "c58f1583-d4f2-48f1-bc60-1a28b768316c",
                "protocol": "tcp",
                "ethertype": "IPv4",
                "remote_ip": "0.0.0.0/0",
                "port": 22,
                "direction": "ingress"
            },
            {
                "id": "62f91a67-cab9-41ee-ae53-1a74331b2842",
                "protocol": "tcp",
                "ethertype": "IPv4",
                "remote_ip": "0.0.0.0/0",
                "port": 9090,
                "direction": "ingress"
            },
            {
                "id": "df3fdc4d-45dc-4a55-991f-882b547e4f5b",
                "protocol": "tcp",
                "ethertype": "IPv4",
                "remote_ip": "{subnet_cidr}",
                "port": 9100,
                "direction": "ingress"
            },
            {
                "id": "b97ed545-2bec-4745-8d78-14ad7de9d9f4",
                "protocol": "tcp",
                "ethertype": "IPv4",
                "remote_ip": "{subnet_cidr}",
                "port": 7199,
                "direction": "ingress"
            },
            {
                "id": "fbfca169-8378-4b4b-86ef-0c8ab54807ef",
                "protocol": "tcp",
                "ethertype": "IPv4",
                "remote_ip": "{subnet_cidr}",
                "port": 7000,
                "direction": "ingress"
            },
            {
                "id": "cc58fec0-54f0-4324-93b6-fccf31f70831",
                "protocol": "tcp",
                "ethertype": "IPv4",
                "remote_ip": "{subnet_cidr}",
                "port": 9042,
                "direction": "ingress"
            }
        ]
    },
    "network": {
        "name": "{deployment_name}_network",
        "id": "241cfeeb-ec0f-4cfc-91ef-36f6ef439950",
        "subnet": {
            "name": "{deployment_name}_subnet",
            "id": "ee5af192-0bfa-44fb-aa46-20e5407562d7",
            "cidr": "{subnet_cidr}"
        },
        "router": {
            "name": "{deployment_name}_router",
            "id": "4ea468b5-44d8-43dc-94db-538c916b5731",
            "external_gateway_network_name": "public"
        }
    },
    "volumes": {
        "cfg": {
            "name": "{deployment_name}_cfg",
            "mount_point": "/mnt/capi_cfg",
            "size": 1,
            "permissions": 447,
            "id": ""
        },
        "in": {
            "name": "{deployment_name}_in",
            "mount_point": "/mnt/capi_in",
            "size": 1,
            "permissions": 447,
            "id": ""
        },
        "out": {
            "name": "{deployment_name}_out",
            "mount_point": "/mnt/capi_out",
            "size": 1,
            "permissions": 667,
            "id": ""
        }
    },
    "file_groups_up": {
        "up_capi_scripts": {
            "src": "../../../test/data/cfg",
            "dst": "/mnt/capi_cfg",
            "permissions": 644
        }
    },
    "file_groups_down": {
        "down_capi_scripts": {
            "src": "/mnt/capi_cfg",
            "dst": "./tmp/capi_cfg"
        }
    },
    "instances": {
        "bastion": {
            "host_name": "{deployment_name}-bastion",
            "ip_address": "10.5.0.2",
            "floating_ip_address": "{floating_ip_address}",
            "flavor": "gp1.semisonic",
            "image": "Ubuntu-22.04",
            "attached_volumes": {
                "cfg": {
                    "attachment_id": "",
                    "device": "",
                    "block_device_id": ""
                },
                "in": {
                    "attachment_id": "",
                    "device": "",
                    "block_device_id": ""
                },
                "out": {
                    "attachment_id": "",
                    "device": "",
                    "block_device_id": ""
                }
            },
            "id": "",
            "service": {
                "env": {
                    "PROMETHEUS_IP": "{prometheus_ip}",
                    "PROMETHEUS_NODE_EXPORTER_VERSION": "{prometheus_node_exporter_version}"
                },
                "cmd": {
                    "setup": [
                        "sh/common/replace_nameserver.sh",
                        "sh/prometheus/setup_node_exporter.sh",
                        "sh/nginx/setup_nginx.sh",
                        "sh/nginx/add_prometheus_reverse_proxy.sh"
                    ],
                    "start": [
                        "sh/prometheus/start_node_exporter.sh",
                        "sh/nginx/start_nginx.sh"
                    ],
                    "stop": [
                        "sh/prometheus/stop_node_exporter.sh",
                        "sh/nginx/stop_nginx.sh"
                    ]
                }
            },
            "applicable_file_groups": [
                "up_capi_scripts",
                "down_capi_scripts"
            ]
        },
        "cassandra01": {
            "host_name": "{deployment_name}-cassandra01",
            "ip_address": "10.5.0.11",
            "flavor": "gp1.supersonic",
            "image": "Ubuntu-22.04",
            "id": "",
            "service": {
                "env": {
                    "CASSANDRA_IP": "10.5.0.11",
                    "CASSANDRA_RACK": "rack1",
                    "CASSANDRA_SEEDS": "{cassandra_seeds}",
                    "PROMETHEUS_IP": "{prometheus_ip}",
                    "PROMETHEUS_NODE_EXPORTER_VERSION": "{prometheus_node_exporter_version}"
                },
                "cmd": {
                    "setup": [
                        "sh/common/replace_nameserver.sh",
                        "sh/prometheus/setup_node_exporter.sh",
                        "sh/cassandra/setup_node.sh"
                    ],
                    "start": [
                        "sh/prometheus/start_node_exporter.sh",
                        "sh/cassandra/start_node.sh"
                    ],
                    "stop": [
                        "sh/prometheus/stop_node_exporter.sh",
                        "sh/cassandra/stop_node.sh"
                    ]
                }
            }
        },
        "cassandra02": {
            "host_name": "{deployment_name}-cassandra02",
            "ip_address": "10.5.0.12",
            "flavor": "gp1.supersonic",
            "image": "Ubuntu-22.04",
            "id": "",
            "service": {
                "env": {
                    "CASSANDRA_IP": "10.5.0.12",
                    "CASSANDRA_RACK": "rack2",
                    "CASSANDRA_SEEDS": "{cassandra_seeds}",
                    "PROMETHEUS_IP": "{prometheus_ip}",
                    "PROMETHEUS_NODE_EXPORTER_VERSION": "{prometheus_node_exporter_version}"
                },
                "cmd": {
                    "setup": [
                        "sh/common/replace_nameserver.sh",
                        "sh/prometheus/setup_node_exporter.sh",
                        "sh/cassandra/setup_node.sh"
                    ],
                    "start": [
                        "sh/prometheus/start_node_exporter.sh",
                        "sh/cassandra/start_node.sh"
                    ],
                    "stop": [
                        "sh/prometheus/stop_node_exporter.sh",
                        "sh/cassandra/stop_node.sh"
                    ]
                }
            }
        },
        "cassandra03": {
            "host_name": "{deployment_name}-cassandra03",
            "ip_address": "10.5.0.13",
            "flavor": "gp1.supersonic",
            "image": "Ubuntu-22.04",
            "id": "",
            "service": {
                "env": {
                    "CASSANDRA_IP": "10.5.0.13",
                    "CASSANDRA_RACK": "rack3",
                    "CASSANDRA_SEEDS": "{cassandra_seeds}",
                    "PROMETHEUS_IP": "{prometheus_ip}",
                    "PROMETHEUS_NODE_EXPORTER_VERSION": "{prometheus_node_exporter_version}"
                },
                "cmd": {
                    "setup": [
                        "sh/common/replace_nameserver.sh",
                        "sh/prometheus/setup_node_exporter.sh",
                        "sh/cassandra/setup_node.sh"
                    ],
                    "start": [
                        "sh/prometheus/start_node_exporter.sh",
                        "sh/cassandra/start_node.sh"
                    ],
                    "stop": [
                        "sh/prometheus/stop_node_exporter.sh",
                        "sh/cassandra/stop_node.sh"
                    ]
                }
            }
        },
        "prometheus": {
            "host_name": "{deployment_name}-prometheus",
            "ip_address": "{prometheus_ip}",
            "flavor": "gp1.semisonic",
            "image": "Ubuntu-22.04",
            "id": "",
            "service": {
                "env": {
                    "PROMETHEUS_NODE_EXPORTER_VERSION": "{prometheus_node_exporter_version}",
                    "PROMETHEUS_TARGETS": "\\'localhost:9100\\',\\'10.5.0.2:9100\\',\\'10.5.0.11:9100\\',\\'10.5.0.12:9100\\',\\'10.5.0.13:9100\\'",
                    "PROMETHEUS_VERSION": "{prometheus_version}"
                },
                "cmd": {
                    "setup": [
                        "sh/common/replace_nameserver.sh",
                        "sh/prometheus/setup_server.sh",
                        "sh/prometheus/setup_node_exporter.sh"
                    ],
                    "start": [
                        "sh/prometheus/start_server.sh",
                        "sh/prometheus/start_node_exporter.sh"
                    ],
                    "stop": [
                        "sh/prometheus/stop_server.sh",
                        "sh/prometheus/stop_node_exporter.sh"
                    ]
                }
            }
        }
    }
}